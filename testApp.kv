<exit_page>:
    canvas:
        Color:
            rgba: 0.6, 0.1, 0.1, 0.9
        Rectangle:
            size: self.size
            pos: self.pos

    MDCard:
        size_hint: None,None
        pos_hint: {"center_x":.5,"center_y":.5}
        size: 800,900
        elevation:8
        padding:25
        spacing:25
        orientation: 'vertical'

        canvas:
            Color:
                rgba: (0, 0, 0, 0.85)
            Rectangle:
                size: self.size
                pos: self.pos

        MDLabel:
            id: label
            markup:True
            text: "[b][color=#E32937]Sure want to exit?[/color][b]"
            font_size: 65
            halign: "center"
            size_hint_y:.5
            height: self.texture_size[1]
            pos_hint: {"center_x":.5, "center_y":.5}
            padding_y:15

        Image:
            id: image
            source: 'exit-door.png'
            center: self.parent.center

        MDRoundFlatButton:
            text:"[color=#E32937] Yes [/color]"
            font_size:60
            pos_hint: {"center_x":.5}
            on_press:
                root.win_button_yes()

        MDRoundFlatButton:
            text:"[color=#0DC90A] No [/color]"
            font_size:60
            pos_hint: {"center_x":.5}
            on_press:
                root.win_button_no()
                root.manager.transition.direction = 'right'


<testClass>:
    BoxLayout:
        orientation: "vertical"
        height: 20
        size_hint_y: None

        Button:
            id: butt_start
            size_hint: None, None
            text: "click me"
            on_press: root.open_exit_page()
            #size_hint: .45,.45
            #pos_hint: {"x":.28,"y":.5}